#!/usr/bin/env node

if ( !/jhp(?:\.cmd)$/.test( process.argv[ 0 ] ) ) {
	process.argv = process.argv.slice( 1 );
}

var actions = {
		start: "server.js"
	},
	action = actions[ process.argv[ 1 ] ];

if ( !action ) {
	console.error( "Usage: jhp start [ folder ]" );
	process.exit( -1 );
}

require( "../lib/" + action )( process.argv[ 2 ] || "." );
