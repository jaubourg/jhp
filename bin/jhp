#!/usr/bin/env node

var program = require("commander");

program
  .version("0.2.0")
  .option("-d, --dir  [path]", "Specify root directory (default './')")
  .option("-p, --port [number]", "Specify port number (default 80)")
  .parse(process.argv);

require("../lib/server")( program.dir, program.port );
